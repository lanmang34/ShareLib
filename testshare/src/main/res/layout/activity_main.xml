<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:text="直接分享微信"
            android:onClick="directShareToWechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="直接分享微信朋友圈"
            android:onClick="directShareToWechatMoments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="直接分享QQ"
            android:onClick="directShareToQQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="直接分享QQ空间"
            android:onClick="directShareToQZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="直接分享新浪微博"
            android:onClick="directShareToSinaWeibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="直接分享短信"
            android:onClick="directShareToShortMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="调起分享按钮"
            android:onClick="shareWithBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="微信登录"
            android:onClick="loginByWechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="QQ登录"
            android:onClick="loginByQQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="微博登录"
            android:onClick="loginByWeibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>

